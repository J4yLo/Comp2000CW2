<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"

            >

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/ProjectPicture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_baseline_event_available_24" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/ProjectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Project"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/ProjectDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Project Description"
                    android:textColor="#6f7873"
                    android:maxLength="20"
                    android:textSize="12dp"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    />
            </LinearLayout>
    </LinearLayout>

            <TextView
                android:id="@+id/LProjectCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="11/12/2021"
                android:textColor="@color/black"

                android:textSize="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                />

            <TextView
                android:id="@+id/ProjectUploadDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="11/12/2021"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:layout_below="@+id/LProjectCode"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                />




    </RelativeLayout>

</LinearLayout>